<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/Namecard_Image"
        android:layout_width="371dp"
        android:layout_height="371dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_add_box_24" />

    <TextView
        android:id="@+id/Namecard_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Namecard_Image"
        android:layout_alignTop="@+id/Namecard_Image"
        android:layout_alignEnd="@+id/Namecard_Image"
        android:layout_alignBottom="@+id/Namecard_Image"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/Namecard_Image"
        app:layout_constraintEnd_toEndOf="@+id/Namecard_Image"
        app:layout_constraintStart_toStartOf="@+id/Namecard_Image"
        app:layout_constraintTop_toTopOf="@+id/Namecard_Image"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>